---
interface Props {
    title: string;
    description: string;
    image: string;
}

const { title, description, image } = Astro.props;
---

<div class="flex flex-col max-w-72 rounded-md">
    <img
        class="w-full h-40 rounded-t-md"
        src=`img/${image}`
        alt=`${title} image`
        loading="lazy"
    />

    <div class="servicio-contenedor text-center rounded-b-md">
        <h4 class="font-bold text-xl">{title}</h4>
        <p class="text-[.965rem]">
            {description}
        </p>
    </div>
</div>

<style lang="scss">
    .servicio-contenedor {
        background-color: #c1bb9d;
        padding: 1rem;
    }
</style>
