---
interface Props {
    title: string;
    description: string;
    className?: string;
    image?: string;
}

const { title, description, className, image } = Astro.props;
---

<div class={`flex flex-col gap-3 ${className}`}>
    {
        // Imagen Opcional
        image && (
            <img
                src={`img/${image}`}
                alt={title}
                class="w-32 h-32 rounded-full"
                loading="lazy"
            />
        )
    }

    <h3 class="text-xl font-bold">{title}</h3>
    <p>
        {description}
    </p>
</div>
