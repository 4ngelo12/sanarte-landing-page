---
interface Props {
    title: string;
    description: string;
    className?: string;
    image?: string;
}

const { title, description, className, image } = Astro.props;
---

<div class={`flex flex-col gap-3 ${className}`}>
    {
        // Imagen Opcional
        image && (
            <picture>
                <source srcset={`img/${image}.webp`} type="image/webp" />
                <source srcset={`img/${image}.png`} type="image/png" />
                <img
                    src={`img/${image}.png`}
                    alt={title}
                    class="w-32 h-32 rounded-full"
                    loading="lazy"
                />
            </picture>
        )
    }

    <h3 class="text-xl font-bold">{title}</h3>
    <p>
        {description}
    </p>
</div>
